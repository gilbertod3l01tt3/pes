<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CONFIGREPORTE">

	<resultMap id="configReporteResultMap" type="PORTALBI_CONFIGREPORTE">
		<result property = "idConfigreporte" column = "ID_CONFIGREPORTE"/>
	   	<result property = "nombre" column = "NOMBRE"/>
	   	<result property = "estatus" column = "ESTATUS"/>
	   	<result property = "parametro" column = "PARAMETRO"/>
	   	<result property = "path" column = "PATH"/>
	   	<result property = "panel" column = "PANEL"/>
	</resultMap>
	
	<select id="selectAll" resultMap = "configReporteResultMap">
	   SELECT * 
	   FROM PORTALBI_CONFIGREPORTE 
	   ORDER BY ID_CONFIGREPORTE
	</select>
		
	<select id="selectById" parameterType="Long" resultMap="configReporteResultMap">
		SELECT * 
	   	FROM PORTALBI_CONFIGREPORTE 
	   	WHERE ID_CONFIGREPORTE = #{id}
	</select>
	
	<select id="selectMaxId" resultType="int">
		SELECT MAX (ID_CONFIGREPORTE) 
		FROM PORTALBI_CONFIGREPORTE
	</select>
	
	<select id="selectParamById" parameterType="Long" resultMap="configReporteResultMap">
		SELECT PARAMETRO
	   	FROM PORTALBI_CONFIGREPORTE 
	   	WHERE ID_CONFIGREPORTE = #{id}
	</select>
	
	<insert id="insert" parameterType="PORTALBI_CONFIGREPORTE">
	  	INSERT INTO PORTALBI_CONFIGREPORTE (ID_CONFIGREPORTE,NOMBRE,ESTATUS,PARAMETRO,PATH,PANEL)	  	
	  	VALUES (#{idConfigreporte}, #{nombre}, #{estatus}, #{parametro}, #{path}, #{panel})
	</insert>
	
	<delete id='delete' parameterType="Long">
		DELETE 
		FROM PORTALBI_CONFIGREPORTE
		WHERE ID_CONFIGREPORTE= #{id}
	</delete>
	
	<update id='update' parameterType="PORTALBI_CONFIGREPORTE">
		UPDATE PORTALBI_CONFIGREPORTE
		set		 
		 NOMBRE=#{nombre},
		 ESTATUS=#{estatus},
		 PARAMETRO=#{parametro},
		 PATH=#{path},
		 PANEL=#{panel}
		WHERE ID_CONFIGREPORTE=#{idConfigreporte}
	</update>
</mapper>
