<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CONFIGOBIEE">

	<resultMap id="configObieeResultMap" type="PORTALBI_CONFIGOBIEE">
		<result property = "idConfigobiee" column = "ID_CONFIGOBIEE"/>
	   	<result property = "parametro" column = "PARAMETRO"/>
	   	<result property = "valor" column = "VALOR"/>
	</resultMap>
	
	<select id="selectAll" resultMap = "configObieeResultMap">
	   SELECT * FROM desarrollodeloitte3.PORTALBI_CONFIGOBIEE 
	   ORDER BY ID_CONFIGOBIEE
	</select>
	
	<select id="selectValue" parameterType="String" resultType="String">
   		SELECT VALOR FROM desarrollodeloitte3.PORTALBI_CONFIGOBIEE 
   		WHERE PARAMETRO=#{parametro}
	</select>
	
	<select id="selectById" parameterType="Long" resultMap="configObieeResultMap">
		SELECT * FROM desarrollodeloitte3.PORTALBI_CONFIGOBIEE 
	   	WHERE ID_CONFIGOBIEE = #{id}
	</select>
	
	<select id="selectMaxId" resultType="int">
		SELECT MAX (ID_CONFIGOBIEE) 
		FROM desarrollodeloitte3.PORTALBI_CONFIGOBIEE
	</select>
	
	<insert id="insert" parameterType="PORTALBI_CONFIGOBIEE">
	  	INSERT INTO desarrollodeloitte3.PORTALBI_CONFIGOBIEE (ID_CONFIGOBIEE,PARAMETRO,VALOR)	  	
	  	VALUES (#{idConfigobiee}, #{parametro}, #{valor})
	</insert>
	
	<delete id='delete' parameterType="Long">
		DELETE FROM desarrollodeloitte3.PORTALBI_CONFIGOBIEE 
		WHERE ID_CONFIGOBIEE= #{id}
	</delete>
	
	<update id='update' parameterType="PORTALBI_CONFIGOBIEE">
		UPDATE desarrollodeloitte3.PORTALBI_CONFIGOBIEE 
		set
		 PARAMETRO=#{parametro},
		 VALOR=#{valor} 
		WHERE ID_CONFIGOBIEE=#{idConfigobiee}
	</update>
</mapper>
