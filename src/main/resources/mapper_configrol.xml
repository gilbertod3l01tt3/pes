<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CONFIGROL">

	<resultMap id="configRolResultMap" type="PORTALBI_CONFIGROL">
		<result property = "idConfigrol" column = "ID_CONFIGROL"/>
	   	<result property = "parametro" column = "PARAMETRO"/>
	   	<result property = "nombre" column = "NOMBRE"/>
	</resultMap>
	
	<select id="selectAll" resultMap = "configRolResultMap">
	   SELECT * 
	   FROM PORTALBI_CONFIGROL 
	   ORDER BY ID_CONFIGROL
	</select>
	
	<select id="selectByName" parameterType="String" resultMap="configRolResultMap">
   		SELECT * 
   		FROM PORTALBI_CONFIGROL 
   		WHERE NOMBRE = #{nombre}
	</select>
	
	<select id="selectById" parameterType="Long" resultMap="configRolResultMap">
		SELECT * 
	   	FROM PORTALBI_CONFIGROL 
	   	WHERE ID_CONFIGROL = #{id}
	</select>
	
	<select id="selectMaxId" resultType="int">
		SELECT MAX (ID_CONFIGROL) 
		FROM PORTALBI_CONFIGROL
	</select>
	
	<insert id="insert" parameterType="PORTALBI_CONFIGROL">
	  	INSERT INTO PORTALBI_CONFIGROL (ID_CONFIGROL,NOMBRE,PARAMETRO)	  	
	  	VALUES (#{idConfigrol}, #{nombre}, #{parametro})
	</insert>
	
	<delete id='delete' parameterType="Long">
		DELETE 
		FROM PORTALBI_CONFIGROL 
		WHERE ID_CONFIGROL= #{id}
	</delete>
	
	<update id='update' parameterType="PORTALBI_CONFIGROL">
		UPDATE PORTALBI_CONFIGROL 
		set
		 PARAMETRO=#{parametro},
		 NOMBRE=#{nombre} 
		WHERE ID_CONFIGROL=#{idConfigrol}
	</update>
</mapper>
